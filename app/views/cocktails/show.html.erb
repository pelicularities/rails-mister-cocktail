<h1><%= @cocktail.name %></h1>
<ul>
<%
  @cocktail.doses.each do |dose|
    dose_desc_full = "#{dose.description} of #{dose.ingredient.name}"
%>
  <li>
    <%= dose_desc_full %>
    <%= link_to dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure you want to remove #{dose_desc_full}?" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </li>
<% end %>
</ul>
<div>
  <%= link_to 'Add New Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary my-3' %>
</div>
<div>
  <%= link_to 'Back To All Cocktails', cocktails_path, class: 'btn btn-warning my-3' %>
</div>
