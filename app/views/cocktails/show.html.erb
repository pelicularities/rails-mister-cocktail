<h1 class="text-center mb-0"><%= @cocktail.name %></h1>
<div class="d-flex flex-wrap justify-content-center">
  <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400, crop: :fill, class: 'rounded mt-3' %>
  <div class="flex-shrink-0 mt-3">
    <ul>
      <%
      @cocktail.doses.each do |dose|
        dose_desc_full = "#{dose.description} of #{dose.ingredient.name}"
      %>
      <li>
        <%= dose_desc_full %>
        <%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure you want to remove #{dose_desc_full}?" } do %>
        <i class="fas fa-trash"></i>
        <% end %>
      </li>
      <% end %>
    </ul>
    <div>
      <%= link_to 'Add New Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary m-3 w-100' %>
    </div>
  </div>
</div>
