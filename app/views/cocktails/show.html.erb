<div class="row">
  <div class="col">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="row d-flex justify-content-star">
  <div class="col-sm thumb-wrapper mr-3">
    <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400, crop: :fill %>
  </div>
  <div class="col-sm">
    <ul>
      <%
      @cocktail.doses.each do |dose|
        dose_desc_full = "#{dose.description} of #{dose.ingredient.name}"
      %>
      <li>
        <%= dose_desc_full %>
        <%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure you want to remove #{dose_desc_full}?" } do %>
        <i class="fas fa-trash"></i>
        <% end %>
      </li>
      <% end %>
    </ul>
    <div>
      <%= link_to 'Add New Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary m-3' %>
    </div>
  </div>
</div>