<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    <h1>Create New Cocktail</h1>
    <%= simple_form_for @cocktail do |f| %>
      <%= f.input :name %>
      <%= f.input :photo, as: :file %>
      <%= f.submit 'Save New Cocktail', class: 'btn btn-primary my-3 w-100' %>
    <% end %>
  </div>
</div>